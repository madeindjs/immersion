<div class="row">
  <div class="col">
    <h1><%= t('reservation.index') %></h1>
  </div>
</div>
<div class="row">
  <% @reservations.each do |reservation| %>
    <div class="col-md-4">
      <div class="card mb-4 box-shadow">
        <img class="card-img-top" src="<%= reservation.product.picture.url %>" alt="Card image cap">
        <div class="card-body">
          <p class="card-title"><strong><%= reservation.product.name %></strong></p>
          <p class="card-text">
            <%= reservation.start_on %>
          </p>
          <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
              <%= link_to t('reservation.view'), reservation, class: 'btn btn-primary' %>
              <%= link_to t('reservation.view_product'), reservation.product, class: 'btn btn-secondary' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>