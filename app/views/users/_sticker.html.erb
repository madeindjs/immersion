<div class="col-md-4">
  <div class="card mb-4 box-shadow">
    <img class="card-img-top" src="<%= user.picture %>" alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title"><%= link_to user.complete_name, user %></h5>
      <p class="card-text"><%= pluralize user.products.size, t('products') %></p>
    </div>
  </div>
</div>