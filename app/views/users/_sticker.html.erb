<%= link_to user do %>
  <figure class="figure user-rounded">
    <%= image_tag user.picture, class: 'figure-img img-fluid rounded-circle',alt: "picture of %s" % user.complete_name %>
    <figcaption class="figure-caption text-center">
      <strong><%= user.complete_name %></strong><br>
      <%= pluralize user.products.size, t('products') %>
    </figcaption>
  </figure>
<% end %>