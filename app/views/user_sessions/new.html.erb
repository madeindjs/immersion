<div class="mx-5 px-5">
  <h1>Se connecter</h1>
  <%= bootstrap_form_for @user_session do |f| %>
    <%= f.email_field :email %>
    <%= f.password_field :password, label: t('password')  %>
    <%= f.submit t('signin') %>
  <% end %>
  <p class="alert alert-info" role="alert"><%= t('user_session.not_already_signup') %><%= link_to t('user_session.signup'), signup_path, class: "alert-link" %></p>
</div>
